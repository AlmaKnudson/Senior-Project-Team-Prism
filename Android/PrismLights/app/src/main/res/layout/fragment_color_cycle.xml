<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.lights.prism.com.prismlights.ColorCycleFragment"
    android:orientation="vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/colorCycleInfoLayout">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/color_cycles_label"
                android:id="@+id/colorCycleListText"
                style="@style/TitleTextView"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="bulb name"
                android:id="@+id/colorCycleBulbNameText"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TitleTextView"/>

            <ImageButton
                style="@style/TopButton"
                android:id="@+id/colorCycleAddButton"
                android:src="@drawable/plus_button"
                android:layout_gravity="center"/>
        </LinearLayout>
    <View
        style="@style/TitleUnderline"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/colorCycleListView"
        android:layout_weight="1"
        style="@style/ListView"
        android:divider="@color/transparent"/>
</LinearLayout>
