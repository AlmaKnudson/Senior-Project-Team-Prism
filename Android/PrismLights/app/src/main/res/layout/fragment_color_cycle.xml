<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.lights.prism.com.prismlights.ColorCycleFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="bulb name"
            android:id="@+id/colorCycleBulbNameText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/colorCycleButtonLayout"
            android:layout_below="@+id/colorCycleBulbNameText"
            android:weightSum="16"
            android:id="@+id/colorCycleInfoLayout">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/colorCycleListTopLayout"
                android:layout_weight="1" >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Color Cycle List"
                    android:id="@+id/colorCycleListText"
                    android:layout_toLeftOf="@+id/colorCycleEditButton"
                    android:layout_toStartOf="@+id/colorCycleEditButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colorCycleEditButton"
                    android:text="Edit"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/colorCycleAddButton"
                    android:layout_toStartOf="@+id/colorCycleAddButton"
                    android:layout_alignParentBottom="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colorCycleAddButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_add" />

            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/colorCycleListView"
                android:layout_weight="7"
                android:choiceMode="singleChoice" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:id="@+id/colorCycleDetailTopLayout"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Color"
                    android:id="@+id/colorCycleHeaderColorText"
                    android:layout_weight="1"
                    android:gravity="center" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Brightness"
                    android:id="@+id/colorCycleHeaderBrightnessText"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Duration"
                    android:id="@+id/colorCycleHeaderDurationText"
                    android:layout_weight="1"
                    android:gravity="center" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Transition"
                    android:id="@+id/colorCycleHeaderTransitionText"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/colorCycleDetailListView"
                android:layout_weight="7"
                android:choiceMode="singleChoice" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/colorCycleButtonLayout"
            android:weightSum="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="OK"
                android:id="@+id/colorCycleOkButton"
                android:background="@drawable/buttons"
                android:padding="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Cancel"
                android:id="@+id/colorCycleCancelButton"
                android:background="@drawable/buttons"
                android:padding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
