<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.lights.prism.com.prismlights.AdvancedSettingFragment"
    android:background="@android:color/black"
    android:weightSum="1">


    <TextView
        android:text="Advanced Light Settings"
        android:id="@+id/textView5"
        style="@style/TitleTextView"/>
    <View
        style="@style/TitleUnderline"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm "
        android:id="@+id/alarmTextAdvancedSetting"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/grid_background"/>
    <View
        style="@style/ListSeparator"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:id="@+id/timerTextAdvancedSetting"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/grid_background"/>
    <View
        style="@style/ListSeparator"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:id="@+id/scheduleTextAdvancedSetting"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/grid_background"/>

    <View
        style="@style/ListSeparator"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Smart Sunset"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/sunsetText"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SunsetSwitch"
            android:checked="false"
            style="@style/ToggleButton"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

    </LinearLayout>
    <View
        style="@style/ListSeparator"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Smart Sunrise"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/sunriseText" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SunriseSwitch"
            android:checked="false"
            style="@style/ToggleButton"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

    </LinearLayout>
    <View
        style="@style/ListSeparator"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beacons"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/beaconsText"
        android:background="@drawable/grid_background"/>

    <View
        style="@style/ListSeparator"/>

</LinearLayout>
